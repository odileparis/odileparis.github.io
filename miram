    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.31.0/mapbox-gl.css' rel='stylesheet' />
    <style>
      body {
        margin: 0;
        padding: 0;
      }

      #map {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
      }

      .mapboxgl-popup {
        max-width: 350px;
        font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
              }
      .mapboxgl-popup h3 {
        font: 50px;
